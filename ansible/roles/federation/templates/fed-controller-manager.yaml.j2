apiVersion: v1
kind: ServiceAccount
metadata:
  name: federation-controller-manager
  namespace: federation-system

---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: federation-controller-manager
  namespace: federation-system
rules:
  - apiGroups:
    - ""
    resources:
    - secrets
    - configmaps
    verbs:
    - get
    - list
    - watch

---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: federation-controller-manager
  namespace: federation-system
subjects:
  - kind: ServiceAccount
    name: federation-controller-manager
roleRef:
  kind: Role
  name: federation-controller-manager
  apiGroup: rbac.authorization.k8s.io

---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: federation-controller-manager
  namespace: federation-system
  labels:
    app: federated-cluster
spec:
  template:
    metadata:
      name: federation-controller-manager
      labels:
        app: federated-cluster
        module: federation-controller-manager
    spec:
      serviceAccountName: federation-controller-manager
      volumes:
      - name: coredns-conf
        configMap:
          name: federation-cm-coredns
          defaultMode: 420
          items:
          - key: coredns.conf
            path: coredns.conf
      - name: kubeconfig
        configMap:
          name: federation-apiserver-kubeconfig
          defaultMode: 420
          items:
          - key: kubeconfig
            path: kubeconfig
      # - name: ssl
      #   hostPath:
      #     path: /etc/ssl
      containers:
      - name: controller-manager
        image: gcr.io/google_containers/hyperkube-amd64:v{{k8s_ver}}
        env:
          - name: POD_NAMESPACE
            valueFrom:
              fieldRef:
                fieldPath: metadata.namespace
        args:
          - /hyperkube
          - federation-controller-manager
          - --master=https://federation-apiserver:443
          - --dns-provider=coredns
          - --dns-provider-config=/etc/coredns/coredns.conf
          - --federation-name={{fed_name}}
          - --zone-name={{fed_zone_name}}
          - --v=2
          - --cluster-monitor-period=3s
          - --kubeconfig=/etc/kubernetes/kubeconfig
        volumeMounts:
        - name: coredns-conf
          readOnly: true
          mountPath: /etc/coredns
        - name: kubeconfig
          readOnly: true
          mountPath: /etc/kubernetes
        # - name: ssl
        #   readOnly: true
        #   mountPath: /etc/ssl
        ports:
          - containerPort: 443
            name: https
          - containerPort: 8080
            name: local

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: federation-cm-coredns
  namespace: federation-system
data:
  coredns.conf: |-
    [Global]
    etcd-endpoints = http://etcd-fed:2379
    zones = {{fed_zone_name}}
